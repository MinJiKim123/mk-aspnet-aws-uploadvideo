@model LoginModel

@{
    ViewData["Title"] = "Login";
}


<div class="container">
    <div class="d-flex justify-content-center h-100"> 
    <div class="text-danger" asp-validation-summary="All"></div>
        <div class="card">
            <div class="card-header">
                <h3>Sign In</h3>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input asp-for="Email" class="form-control" placeholder="Email" required />
                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" required />
                    </div>
               
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn float-right login_btn">
                    </div>

                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                    Don't have an account?<a asp-action="Create" style="color: white">Sign Up</a>
                </div>
            </div>
        </div>
    </div>

</div>

    
