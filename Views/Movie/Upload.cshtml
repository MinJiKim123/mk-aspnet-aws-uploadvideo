@model CreateMovieModel
@{
    Layout = "_Layout";
}

<h2>Upload Movie</h2>
<hr />
<div>
    @ViewBag.ErrMsg
</div>
<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="upload-form">
            <form asp-action="Upload" asp-controller="Movie" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="UserId" value=@ViewBag.newUI />
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Name" class="form-control" required />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="VideoFilePath" class="col-sm-2 col-form-label"> File </label>
                    <div class="col-sm-10">
                        <input type="file" asp-for="VideoFilePath" accept="video/*" required/>
                    </div>
                </div>
                <div class="form-inline">

                    <input type="submit" value="Upload" class="btn btn-primary" />
                    <div style="width: 10px"></div>
                    <a asp-action="DisplayMovies" asp-controller="Movie" asp-route-userid="@ViewBag.newUI" class="btn btn-secondary">Cancel</a>
                </div>
</form>
        </div>
    </div>
</div>
